@using (Form())
{
    @using (Panel(stateFilter: "PaperCheckVoucher", defaultLabelColumns: 0, defaultControlColumns: 12, headingText: "Paper Check Payment"))
    {

        <p>If payment is not submitted by the date indicated, you will be subject to interest or penalties.</p>
        @using (Panel(panelLayout: PanelLayout.Grid, defaultLabelColumns: 6, defaultControlColumns: 6, borderVisible: false))
        {
            <table width="100%">
                <tr>
                    <td width="60%" style="visibility:hidden"></td>
                    <td width="30%">
                        @Data(labelText: "Payment Due Dates:", dataSource: "PaymentDueDates", labelColumns: 4, controlColumns: 4, cssClass: "bold")
                        @Data(labelText: "Prepayment Due Date", dataSource: "PrepaymentDueDates", labelColumns: 4, controlColumns: 4, cssClass: "bold")
                        @Data(labelText: "Payment Amount", labelColumns: 4, controlColumns: 4, dataSource: "PaymentAmountPaperVoucher", formatter: Formatter.Currency, cssClass: "bold")
                        @Data(labelText: "Employer Account Number", labelColumns: 4, controlColumns: 4, dataSource: "EmployerIDPaperVoucher", cssClass: "bold")
                        @Data(labelText: "Make Checks Payable To", labelColumns: 4, controlColumns: 4, dataSource: "ChecksPayableAt", cssClass: "bold")
                        @Data(labelText: "Mailing Address", labelColumns: 4, controlColumns: 4, dataSource: "MailingAddress", cssClass: "bold")
                    </td>
                </tr>
            </table>

        }

        <div>
            <ul>
                <li>
                    <strong>
                        Paper check payments will be posted to your account when received by the
                        check processing unit.
                    </strong>
                </li>
                <li>
                    <strong>
                        All paper checks must be submitted with a payment voucher in order for your
                        account to be credited in a timely manner.
                    </strong>
                </li>
                <li><strong>Include one voucher and one check per envelope.</strong></li>
                <li><strong>Staple check to voucher.</strong></li>
                <li><strong>Do not include additional documents with your payment.</strong></li>
                <li><strong>DO NOT SEND CASH.</strong></li>
                <li>
                    <strong>
                        Mail the payment no later than five days prior to the due date to ensure
                        timely receipt.
                    </strong>
                </li>
            </ul>
        </div>
        @*<tr>
            <td colspan='3'>
                For more information or to make your payment electronically, you can log in to your Paid Family and Medical Leave (PFML) System account
                online at <a href="https://www.dws.state.nm.us" target="_blank">www.dws.state.nm.us</a>, Sunday through Friday from 4:00 a.m. to 9:00 p.m.  You can also contact a Customer Service Agent in the
                Paid Family and Medical Leave  Insurance Operations Center at 1-877-664-6984 (Option 3), Monday through Friday from 8:00 a.m. to 4:30 p.m. or email
                <a href="https://www.uitax.support.state.nm.us" target="_blank">www.uitax.support.state.nm.us</a>.
            </td>
        </tr>*@
        <tr>
            <td colspan='3'>
                <br />
                <br />
                The payment you are making by check authorizes the State Department Workforce Solutions to use the information from your check to make a one-time electronic fund transfer from your account or to process the payment as a check transaction.
            </td>
        </tr>
        <tr>
            <td colspan='3'>
                <br />
            </td>
        </tr>
        <br />
        <tr>
            <td colspan="3">
                <table width="100%">
                    <tr>
                        <td width="35%">
                            Print Name _____________________
                        </td>
                        <td width="30%">
                            &nbsp;
                        </td>
                        <td width="35%">
                            Date ___________________
                        </td>
                    </tr>
                    <tr>
                        <td colspan='3'>
                            <br />
                        </td>
                    </tr>
                    <tr>
                        <td width="35%">
                            Signature ______________________
                        </td>
                        <td width="30%">
                            &nbsp;
                        </td>
                        <td width="35%">
                            Phone __________________
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        @using (Panel(panelLayout: PanelLayout.Inline, cssClass: "text-center", borderVisible: false))
        {
            <br />
            @Button(text: "Close", transition: "Close")
            <div class="form-group">
                <button id="btnPrint" value="Print" onclick="javascript:window.print()" class="btn btn-default">Print</button>
            </div>
        }
    }
}